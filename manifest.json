{
  "manifest_version": 3,
  "name": "translator web",
  "version": "1.0",
  "description": "Translate page to Persian and apply RTL layout (Translator Web Toggle).",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"]
}